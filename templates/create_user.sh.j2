#!/bin/bash

# Create users group
/usr/sbin/groupadd -g {{ ansible_env.SUDO_GID }} {{ ansible_env.SUDO_USER }}

# Create user account
/usr/sbin/useradd -g {{ ansible_env.SUDO_GID }} -G wheel -m -u {{ ansible_env.SUDO_GID }} {{ ansible_env.SUDO_USER }}

# Create users .ssh directory and set permissions
/usr/bin/mkdir -m 0700 /home/{{ ansible_env.SUDO_USER }}/.ssh
/usr/bin/chown {{ ansible_env.SUDO_USER }}:{{ ansible_env.SUDO_USER }} /home/{{ ansible_env.SUDO_USER }}/.ssh
